// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  email         String         @unique
  role          Role           @default(TOURIST)
  imageId       Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  password      String
  avatarImage   Image          @relation(fields: [imageId], references: [id])
  placeRatings  PlaceRating[]
  placeComments PlaceComment[]
  Place         Place[]
}

model Place {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  description   String         @db.Text
  direction     String
  kindOfplaceId Int
  validated     Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userId        Int
  user          User           @relation(fields: [userId], references: [id])
  kindOfPlace   KindOfplace    @relation(fields: [kindOfplaceId], references: [id])
  images        PlaceImage[]
  placeRatings  PlaceRating[]
  comments      PlaceComment[]
}

model PlaceImage {
  id      Int   @id @default(autoincrement())
  imageId Int   @unique
  placeId Int
  Place   Place @relation(fields: [placeId], references: [id])
  image   Image @relation(fields: [imageId], references: [id])
}

model PlaceRating {
  id             Int   @id @default(autoincrement())
  starRating     Int   @default(0)
  securityRating Int   @default(0)
  userId         Int   @unique
  placeId        Int
  place          Place @relation(fields: [placeId], references: [id])
  user           User  @relation(fields: [userId], references: [id])
}

model Image {
  id         Int         @id @default(autoincrement())
  name       String
  path       String      @unique
  user       User[]
  placeImage PlaceImage?
}

model PlaceComment {
  id        Int      @id @default(autoincrement())
  userId    Int
  placeId   Int
  text      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  place     Place    @relation(fields: [placeId], references: [id])
}

model KindOfplace {
  id     Int     @id @default(autoincrement())
  kind   String  @unique
  places Place[]
}

enum Role {
  ADMIN
  MODERATOR
  TOURIST
  SELLER
}
